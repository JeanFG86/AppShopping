<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppShopping.Views.FilmDetail">
    <Shell.TitleView>
        <ContentView>
            <Image Source="TitleViewLogo" HorizontalOptions="Start" VerticalOptions="Center" HeightRequest="30"/>
        </ContentView>
    </Shell.TitleView>
    <ContentPage.Content>
        <StackLayout Padding="10">
            <Label Text="Filme " Style="{StaticResource TitleType}" />
            <Label Text="1917" Style="{StaticResource TitleName}"/>
            <Frame Padding="10" Margin="0,15,0,15">
                <Label Text="Descrição" />
            </Frame>
            <Label Text="Sessões" Style="{StaticResource TitleType}" />
            <Label Text="Legendadas" Style="{StaticResource SessionTitle}" />
            <CollectionView ItemsSource="{Binding SessionSubtitle}">
                
            </CollectionView>
            <Label Text="Dubladas" Style="{StaticResource SessionTitle}" />
            <CollectionView ItemsSource="{Binding SessionDub}">

            </CollectionView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>